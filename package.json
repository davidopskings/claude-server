{
	"name": "agent-server",
	"version": "1.0.0",
	"type": "module",
	"scripts": {
		"preinstall": "node -e \"if(process.env.npm_execpath && !process.env.npm_execpath.includes('bun')) { console.error('\\x1b[31mError: Use bun, not npm/pnpm/yarn\\x1b[0m'); process.exit(1); }\"",
		"prepare": "husky",
		"dev": "bun --hot src/index.ts",
		"dev:tsx": "tsx watch src/index.ts",
		"build": "tsc",
		"start": "bun dist/index.js",
		"test": "bun test",
		"test:watch": "bun test --watch",
		"test:coverage": "bun test --coverage",
		"test:unit": "bun test tests/unit",
		"test:integration": "bun test tests/integration",
		"check": "biome check --write src/ tests/",
		"check:ci": "biome check src/ tests/ && tsc --noEmit && bun test",
		"typecheck": "tsc --noEmit"
	},
	"dependencies": {
		"@supabase/supabase-js": "^2.90.0",
		"dotenv": "^17.2.3",
		"express": "^5.2.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.11",
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/express": "^5.0.0",
		"@types/node": "^25.0.10",
		"husky": "^9.1.7",
		"lint-staged": "^15.5.2",
		"tsx": "^4.21.0",
		"typescript": "^5.9.3"
	}
}
